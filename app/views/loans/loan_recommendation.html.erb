<a href="/loans/new" class="btn btn-success btn-lg float-right" role="button">New Loan</a>

<% if @loans %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Credit</th>
      <th scope="col">status</th>
    </tr>
  </thead>
  <tbody>
  	<% @loans.each_with_index do |data, i|%>
	    <tr>
	      <th scope="row"><%= i+1 %></th>
	      <td><%= data[:email] %></td>
	      <td><%= data[:credit_limit] %></td>
	      <td><%= data[:status] %></td>
	    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
	User not found
<% end %>